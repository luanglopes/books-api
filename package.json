  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --no-notify src/shared/infra/http/server.ts",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up -d",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "start": "cross-env NODE_ENV=production node -r dotenv/config ./dist/shared/infra/http/server.js",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "test": "jest",
    "test:dev": "jest --watch"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "celebrate": "^12.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.8.17",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.17.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
